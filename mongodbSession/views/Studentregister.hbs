
<section class="container">
  <div class="form-container">
    <div class="section-header">
      <p class="secondary-text"></p>
      <h1 class="primary-heading">
        {{category}} kursiga yozilish<span class="fullstop">.</span>
      </h1>
      
    </div>
    <form action="/course/{{category}}/add/student" class="form" name="addStudent" method="post" enctype="multipart/form-data">
      <div class="form-input">
        <div class="name-input">
          <input type="text" name="fname" id="fname" placeholder="First Name" />
          <input type="text" name="lname" id="lname" placeholder="Last Name" />
        </div>
        <input type="text" name="tel" id="email" placeholder="tel" value="+998" />
        <input type="password" name="pass" id="pass" placeholder="Password" />
        <input type="file" name="doc" class="file" style="display: none;">
        <div class="btn-input">
          <button type="button" class="secondary-btn" >
            fayl biriktirish
            </button>
          <button type="submit" class="primary-btn">Ro'yhatdan o'tish</button>
        </div>
      </div>
    </form>
  </div>
 
</section>

<script>
    const file = document.querySelector(".file")
    const btn = document.querySelector(".secondary-btn")
    btn.addEventListener("click" , (event)=>{
        event.preventDefault()
        alert("pasport yoki metrka rasmini tanlang")
        file.click()
    })
    document.querySelector(".form").addEventListener("submit" , (e)=>{
      document.querySelectorAll("input").forEach(inp=>{
        if(inp.value == "" && inp.type !="file"){
          alert(inp.placeholder+" bosh")
          e.preventDefault()
        }
      })
      if(file.files.length == 0){
      e.preventDefault()
        alert("fayl biriktirilmadi")
      }
    })
</script>