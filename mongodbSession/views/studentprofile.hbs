<section class="user-page section-padding">
    <div class="container">
        <div class="row align-items-stretch">
            <div class="col-lg-4 col-md-5 col-xs-12">
                <div class="user-profile-box">
                    <div class="header clearfix d-flex flex-column align-items-center">
                        <h2>{{student.name}} {{student.fristname}}</h2>
                        <img id="g-profile-img" class="img-fuid mb-3" width="80" height="80" alt="avatar"
                            src="{{student.avatar}}">
                    </div>
                    <div class="mt-1 d-flex justify-content-center">
                        <input type="file" name="avatarStudent" id="avatar" hidden>
                        <button class="btn btn-primary btn-sm mt-3">avatarni yuklash</button>
                    </div>
                    <div class="detail clearfix">
                            <button 
                            id="logOut"
                            style="border: none;outline:none;"
                                class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                profildan chiqish
                            </button>
                            <span style="color: rgb(219, 219, 219);text-align:center;margin-left:20px">royhatdan otilgan kurslar</span>
                            {{#if student.category}}
                                <select class="categoryCouse">
                                    {{#each student.category}}
                                        <option value="{{name}}">{{name}}</option>
                                    {{/each}}
                                </select>
                            {{/if}}
                            <select id="newCourse">
                                <option value="">yangi kursga yozilish</option>
                                <option value="kompyuter-savodxonlik">kompyuter-savodhonlik</option>
                                <option value="front-end">front-end</option>
                                <option value="back-end">back-end</option>
                                <option value="rus-tili">Rus-tili</option>
                                <option value="ingliz-tili">Ingliz-tili</option>
                                <option value="cyber-havfsizlik">kiber-havfsizlik</option>
                                <option value="grafik-dizayn">grafik-dizayn</option>
                            </select>
                    </div><!-- Détail-->
                </div><!-- Student profile box-->
            </div>
            <div class="col-lg-8 col-md-7 col-xs-12">
                <div class="dashborad-box">
                    <h4 class="title">News</h4>
                    <div class="section-body">
                        <div class="dropdown mr-1">
                          
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <th>message</th>
                                    <th>Statut</th>
                                    <th>by</th>
                                    <th>Date création</th>
                                </thead>
                                <tbody class="tbody">
                                    {{#if messageByTeacher}}
                                        {{#each messageByTeacher}}
                                            <tr>
                                                <td>{{messageText}}</td>
                                                <td><span class="badge badge-pill badge-{{status}}">{{statusMessage}}</span></td>
                                                <td>
                                                    <span class="g-auteur" style="color: greenyellow;">{{teacher}}</span>
                                                    <br />
                                                </td>
                                                <td>{{{vaqt}}}</td>
                                                <td>
                                                </td>
                                            </tr>
                                        {{/each}}
                                        {{else}}
                                        <h1 style="width:100%;text-align:center;">Bizga ishonganingiz uchun raxmat</h1>
                                        <h3 style="width:100%;text-align:center;">hozircha habarlar yoq</h3>
                                    {{/if}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    </h4>
                </div>
                <div class="dashborad-box">
                    <h4 class="title">O'quvchini baho jadvali</h4>
                    <div class="section-body">
                        <canvas id="myChart">
                        </canvas>
                    </div>
                </div><!-- Dbox -->
            </div>
        </div>
    </div>
</section>
